@model IEnumerable<PhishAnalyzer.Models.Message>

@{
    ViewData["Title"] = "Index";
}

<h2>Messages</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.sender)
            </th>
            <td>
                @Html.DisplayNameFor(model => model.recipient)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.recipientCC)
            </td>
            <th>
                @Html.DisplayNameFor(model => model.subject)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.recieved)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.body)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.sender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.recipient)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.recipientCC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.subject)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.recieved)
            </td>
            <td>
                <div class="scrollBody">
                    @Html.DisplayFor(modelItem => item.body)
                </div>
            </td>
            <td>
                <a asp-action="Analyze" asp-route-id="@item.ID">Analyze</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
